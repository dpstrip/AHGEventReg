@model AHGEventReg.Models.Session
@{
    ViewBag.Title = "EditSession";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Session</h2>
@using (Html.BeginForm("EditSession", "Session"))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Name)
        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Description)
        @Html.TextBoxFor(s => s.Description, new { @class = "form-control" })
    </div>

 
    <div class="form-group">
        @Html.LabelFor(s => s.Location)
        @Html.TextBoxFor(s => s.Location, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(s => s.Id)
    <button type="submit" class="btn btn-primary"> Save</button>


}


